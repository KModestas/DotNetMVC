@* import the Lesson Model which also has a nested Module Model *@
@model IEnumerable<wealthKernelApp.Models.Lesson>

@{
  ViewData["Title"] = "Lessons";
}

  <h1>LESSONS</h1>
   @foreach (var lesson in Model) {
    <h3>@lesson.Title</h3>
    <a class="nav-link">@Html.ActionLink("Go to Lesson", "Lesson", new {@slug=@lesson.Slug})</a>
    <ul>
      @foreach (var module in lesson.Modules) {
          <li>
            <b>@module.Title</b>
            <p>@module.Copy</p>
         </li>
      }
    </ul>
}

